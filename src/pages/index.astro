const reflexiones = [
  {
    slug: 'la-ley-de-la-variedad-requerida',
    title: 'La ley de la variedad requerida y el desafío comunicacional contemporáneo',
    summary: 'Ningún actor puede controlar el entorno sin igualarlo en complejidad; y si no puede, debe domesticarlo.',
  },
  {
    slug: 'autoridades-y-redes-sociales',
    title: 'Autoridades y redes sociales: una confusión frecuente',
    summary: 'Las redes institucionales no son un canal 24/7 para cronicar agendas personales.',
  },
  {
    slug: 'comunicar-sin-miedo',
    title: 'Comunicar sin miedo',
    summary: 'Preparación, confianza y escucha activa superan el temor a exponerse.',
  },
];

const prensa = [
  {
    title: 'Operación Topógrafo — Espionaje del Ejército a denunciantes',
    outlet: 'La Tercera',
    img: '/images/topografo.svg',
    url: 'https://www.latercera.com/reportajes/noticia/operacion-topografo-espionaje-del-ejercito-cuatro-denunciantes-irregularidades/777342/',
  },
  {
    title: 'Ricardo Lagos: “Durante mi gobierno no privaticé nada, al contrario”',
    outlet: 'Publimetro',
    img: '/images/lagos.svg',
    url: 'https://www.publimetro.cl/cl/noticias/2016/11/18/ex-presidente-lagos-durante-mi-gobierno-no-privatice-nada-contrario.html',
  },
  {
    title: 'Sebastián Piñera: “Me siento orgulloso de lo que he logrado en la vida”',
