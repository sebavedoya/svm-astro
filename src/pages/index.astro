const proyectos = [
  {
    slug: 'operacion-topografo',
    title: 'Operación Topógrafo',
    img: '/images/topografo.svg',
    desc: 'Investigación que reveló espionaje militar a periodistas y denunciantes.',
  },
  {
    slug: 'vocerias-y-despliegue',
    title: 'Vocerías y despliegue',
