const experiencia = [
  { name: 'La Tercera', url: 'https://www.latercera.com/', img: '/images/exp-la-tercera.svg' },
  { name: 'Ministerio de Educación', url: 'https://www.mineduc.cl/', img: '/images/exp-mineduc.svg' },
  { name: 'INDAP', url: 'https://www.indap.gob.cl/', img: '/images/exp-indap.svg' },
  { name: 'Municipalidad de Cerro Navia', url: 'https://www.cerronavia.cl/', img: '/images/exp-cerro-navia.svg' },
  { name: 'Publimetro', url: 'https://www.publimetro.cl/', img: '/images/exp-publimetro.svg' },
  { name: 'Subsecretaría de Telecomunicaciones', url: 'https://www.subtel.gob.cl/', img: '/images/exp-subtel.svg' },
  { name: 'Televisión Nacional de Chile', url: 'https://www.tvn.cl/', img: '/images/exp-tvn.svg' },
